<div class="comments-section">
  <h2>Comments</h2>

  <% if @comments.any? %>
    <div class="comments-list">
      <% @comments.each do |comment| %>
        <%= render 'comments/comment', post: @post, comment: comment %>
      <% end %>
    </div>
  <% else %>
    <p>No comments yet. Be the first to comment!</p>
  <% end %>

  <h3>Add a Comment</h3>
  <%= render 'comments/form', post: @post %>
</div>

